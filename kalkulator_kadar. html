<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Kalkulator Berat Campuran Timah</title>
</head>
<body style="font-family: Arial; max-width: 400px; margin: 30px auto;">
  <h2>Kalkulator Berat Campuran Timah</h2>
  <label>Kadar Sn (% berat):</label><br>
  <input id="snPercent" type="number" value="65" min="0" max="100"><br><br>

  <label>Volume campuran (cm³):</label><br>
  <input id="volume" type="number" value="370" min="0"><br><br>

  <button onclick="hitung()">Hitung Berat</button>

  <h3>Hasil:</h3>
  <p id="output"></p>

  <script>
    function hitung() {
      const rhoSn = 7.29;        // g/cm³
      const rhoMineral = 4.5;    // g/cm³ asumsi rata-rata
      const snPercent = parseFloat(document.getElementById('snPercent').value);
      const volume = parseFloat(document.getElementById('volume').value);

      if (isNaN(snPercent) || isNaN(volume) || snPercent < 0 || snPercent > 100) {
        document.getElementById('output').innerText = "Masukkan data valid.";
        return;
      }

      const wSn = snPercent / 100;
      const rhoMix = 1 / ((wSn / rhoSn) + ((1 - wSn) / rhoMineral));
      const massa = rhoMix * volume; // gram

      document.getElementById('output').innerText = 
        `Densitas campuran ≈ ${rhoMix.toFixed(2)} g/cm³\nBerat ≈ ${(massa/1000).toFixed(3)} kg`;
    }
  </script>
</body>
</html>
